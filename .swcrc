{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "baseUrl": "./",
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
    },
    "transform": {
        "legacyDecorator": true,
        "decoratorMetadata": true
    },
    "target": "es2022",
    "keepClassNames": true,
    "externalHelpers": true
  },
  "module": {
    "type": "es6",
    "resolveFully": true
  },
  "sourceMaps": true
}